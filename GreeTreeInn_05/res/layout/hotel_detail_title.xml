<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_background"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/hotel_iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_normal" />

    <TextView
        android:id="@+id/hotel_detail_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="酒店详情" />

    <ImageView
        android:id="@+id/hotel_detail_iv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btn_store_normal"/>

    <ImageView
        android:id="@+id/hotel_detail_iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share_normal"/>

    <ImageView
        android:id="@+id/hotel_detail_iv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phone_2"/>
    

</LinearLayout>